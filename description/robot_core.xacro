<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"> 


    <!-- Materials that are gonna be used for the robot -->
    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>        

    <xacro:property name="base_width" value="1.5"/>
    <xacro:property name="base_length" value="1.5"/>
    <xacro:property name="base_height" value="0.75"/>

    <!-- base_link -->
     <link name="base_link">

    </link>


    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.3 0 0" rpy="0.0 0.0 0.0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.75 0 0.375"/>
            <geometry>
                <box size="${base_length} ${base_width} ${base_height}"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.75 0 0.375"/>
            <geometry>
                <box size="${base_length} ${base_width} ${base_height}"/>
            </geometry>
        </collision>
    </link>
    <!-- left wheel -->
     <joint name="left_wheel_joint" type="continuous">
        <origin xyz="0.0 0.85 0.0" rpy="-1.57 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <axis xyz="0.0 0.0 1.0"/>
        
    </joint>
    <!-- left_wheel link-->
    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.3" length="0.20"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.3" length="0.20"/>
            </geometry>
        </collision>
    </link>

    <gazebo reference="left_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>


    <joint name="right_wheel_joint" type="continuous">
        <origin xyz="0.0 -0.85 0.0" rpy="1.57 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <axis xyz="0.0 0.0 -1.0"/>
        
    </joint>
    <!-- right_wheel link-->
    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.3" length="0.20"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
             <geometry>
                <cylinder radius="0.3" length="0.20"/>
            </geometry>
        </collision>
    </link>

    <gazebo reference="right_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>   

    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz="1.0 0 0"/>
    </joint>


    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.3"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.3"/>
            </geometry>
        </collision>
    </link>


    <gazebo reference="caster_wheel">
        <material>Gazebo/Black</material>
        <!-- fixing the friction for the caster wheel-->
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>
   
</robot>